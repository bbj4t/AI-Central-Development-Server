{
  "name": "Docker-in-Docker",
  "image": "mcr.microsoft.com/devcontainers/base:alpine",
  "settings": {
    "terminal.integrated.profiles.linux": {
      "bash": {
        "path": "/usr/bin/bash"
      }
    }
  },
  "forwardPorts": [5678, 4000, 9443, 9000, 9001, 8080],
  "mounts": [
    "source=${localWorkspaceFolder}/docker-compose.yml,target=/workspace/docker-compose.yml,type=bind"
  ],
  "postCreateCommand": "docker compose up -d"
}